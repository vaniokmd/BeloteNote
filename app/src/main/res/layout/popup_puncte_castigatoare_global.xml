<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/row"
    android:gravity="center"
    android:orientation="vertical">


        <TableRow
            android:layout_weight="0"

            android:id="@+id/nome_gioco_global_table_row"
            android:layout_margin="@dimen/padding_of_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <!--<EditText
                android:id="@+id/nume_joc_4_jucatori_in_echipa_popup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="@string/introdu_nume_partida"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:singleLine="true"
                android:textStyle="bold|italic"
                android:visibility="invisible" />-->

        </TableRow>

        <TableRow
            android:layout_gravity="center"
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_of_16"
            android:layout_margin="@dimen/padding_of_16">

            <TextView

                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="@string/puncte_castigatoare_precedente"
                android:textColor="@android:color/black"
                android:textStyle="bold|italic" />
            <Spinner
                android:id="@+id/spinner_puncte_castigatoare_precedente"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </TableRow>

    <TableRow
        android:layout_weight="1"
        android:layout_margin="@dimen/padding_of_16"
        android:layout_gravity="center" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView
            android:layout_weight="1"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/error_alert_nome_gioco_puncte_castigatoare" />

    </TableRow>

    <TableRow
        android:layout_weight="0"
        android:paddingTop="@dimen/padding_of_16"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_of_16">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/padding_of_16"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/introduc_manual_puncte_castigatoare"
            android:textColor="@android:color/black"
            android:textStyle="bold|italic" />

        <Switch
            android:id="@+id/switch_button_active_puncte_castigatoare_global"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </TableRow>

    <TableRow
        android:layout_weight="0"
            android:paddingTop="@dimen/padding_of_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_of_16"
            android:gravity="center">

            <com.ionvaranita.belotenote.borders.BorderedEditText

                android:id="@+id/puncte_castigatoare_global_inserimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="3"
                android:textStyle="bold|italic"
                android:visibility="invisible" />

        </TableRow>

        <TableRow

            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_margin="@dimen/padding_of_16"
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel_button_puncte_castigatoare_global_popup"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_of_16"
                android:layout_weight="1"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/ok_button_puncte_castigatoare_global_popup"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_of_16"
                android:layout_weight="1"
                android:text="@string/ok" />

        </TableRow>


</LinearLayout>
